

<div class="col-md-3">

  <h1>User info</h1>
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <p class="userinfo-name">name     <%= user.name %></p>
  <p class="userinfo-intro">introduction     <%= user.introduction %></p>

  <div class="user-edit ">
    <%= link_to  edit_user_path(user.id) do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  </div>

  <h1>New book</h1>
  <%= form_with model: book_new do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book', class: "create-box" %>
  <% end %>

</div>