<div class="container">
  <div class="row edit-row">
    <div class="col-5">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="name-edit">
          <label for="inputName">Name</label>
          <br>
          <%= f.text_field :name, autofocus: true, id:"inputName" %>
        </div>

        <div class="image-edit">
          <label for="inputImage">Image</label>
          <br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>

        <div class="introduction-edit">
          <label for="inputIntroduction">Introduction</label>
          <br>
          <%= f.text_area :introduction, autoforcus: true, accept: "introduction" %>
        </div>


        <%= f.submit "Update User", class: "update-user" %>
      <% end %>
    </div>
  </div>
</div>

