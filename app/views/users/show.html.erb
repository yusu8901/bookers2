<div class="container">
  <div class="row">
    <%= render 'books/list', book_new: @book_new, user: @user %>
    <div class="offset-md-1 col-md-8">
      <h1>Books</h1>

      <div>
        <table>
          <thead class="table-head">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag book.get_image %>
                <% end %>

              </td>

              <td><%= link_to book.title, book_path(book.id)  %></td>
              <td><p><%= book.body %></p></td>


            </tr>
            <% end %>
          </tbody>
        </table>

      </div>


    </div>
  </div>
</div>